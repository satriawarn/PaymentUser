<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputCCActivity"
    android:background="#FFFF">

    <EditText
        android:id="@+id/NoKartu"
        android:layout_width="313dp"
        android:layout_height="45dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/input"
        android:ems="10"
        android:fontFamily="@font/rmedium"
        android:hint="16 Digit"
        android:importantForAutofill="no"
        android:inputType="number"
        android:paddingStart="17dp"
        android:textColor="#7B7B7B"
        android:textColorHint="#7B7B7B"
        app:layout_constraintBottom_toTopOf="@+id/Simpan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Simpan"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="313dp"
        android:layout_height="45dp"
        android:layout_marginBottom="250dp"
        android:background="@drawable/button_blue_rec"
        android:fontFamily="@font/rmedium"
        android:onClick="gethome"
        android:text="Simpan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="188dp"
        android:layout_height="65dp"
        android:layout_marginTop="500dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="145dp"
        android:layout_marginRight="145dp"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/rmedium"
        android:text="Inputkan Nomor Kartu Anda:"
        android:textColor="#7B7B7B"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/NoKartu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>